{
  "name": "revoice-electron",
  "version": "0.1.0",
  "private": true,
  "description": "Electron desktop UI for the Revoice transcription CLI",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently -k \"npm:renderer:dev\" \"npm:electron\"",
    "start": "npm run dev",
    "electron": "wait-on tcp:127.0.0.1:5173 -- cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron .",
    "renderer:dev": "vite --config renderer/vite.config.ts",
    "renderer:build": "vite build --config renderer/vite.config.ts",
    "renderer:preview": "vite preview --config renderer/vite.config.ts",
    "prep-python": "node scripts/prepare-python.js",
    "pack": "npm run renderer:build && electron-builder --dir",
    "dist": "npm run renderer:build && npm run prep-python && electron-builder"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.5.3",
    "vite": "^5.4.1",
    "wait-on": "^7.0.2"
  },
  "build": {
    "appId": "com.sasuke.revoice",
    "productName": "Revoice",
    "files": [
      "main.js",
      "preload.js",
      "renderer/dist/**/*",
      "renderer/assets/**/*"
    ],
    "extraResources": [
      {
        "from": "embedded-python",
        "to": "embedded-python",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "icon": "../revoice.icns",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "icon": "../revoice.icns"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
